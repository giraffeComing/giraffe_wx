/* pages/list/list.wxss */
page{
  width: 100%;
  height: 100%;
  background: #fff
}

.footer{
  position: fixed;
  color: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 999;
  overflow: hidden;
  font-size: 40rpx;
  display: flex;
  justify-content: space-between;
  background: #0aadbc;
  animation: slideUp .3s;
  animation-fill-mode: forwards;
}
.footer-tab{
  width: 200rpx;
  text-align: center
}
.footer-tab-current{
  color: #02707a
}