/**index.wxss**/
@keyframes show-animate{
  0%{
    opacity: 0
  }
  100%{
    opacity: 1
  }
}
page{
  width: 100%;
  height: 100%;
  animation: show-animate .5s ease-in-out
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
} 
.bg_img{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 99
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;

}

.userinfo-nickname {
  color: #aaa;
   z-index: 99
}

.usermotto {
  margin-top: 200px;
   z-index: 99;
   color: #2f67a2
}
.footer{
  position: fixed;
  bottom: 0;
  color: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 999;
  overflow: hidden;
  font-size: 40rpx;
  display: flex;
  justify-content: space-between;
}
.footer-tab{
  width: 200rpx;
  text-align: center
}


swiper{
  position: relative;
   z-index: 99 ;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}

.btn-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
}
.start-btn{
  position: absolute;
  bottom: 200rpx;
  z-index: 99;
  border-radius: 200rpx;
  background: none;
  border: 6rpx solid #00d39f;
  color: #00d39f;
  width: 400rpx;
  animation: show-animate .8s ease-in-out
}
.hidden-btn{
  display: none
}
.banner-text{
  position: absolute;
  top: 400rpx;
  z-index: 99;
  color: #fff;
  font-size: 60rpx
}